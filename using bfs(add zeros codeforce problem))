using namespace std;
const int mod=1e9+7,N=4e5+7;
// vector<int>g[N];
map<int, vector<int>>mpp;
map<int,int> dp;

int dfs(int n){
    // vis[n]=true;
    int x=n;
    if(mpp[n].empty())return dp[n]=x;
    if(dp[n]!=-1)return dp[n];
    for(auto v:mpp[n]){
        if(v!=0)
            x=max(x,dfs(n+v));
    }
    return dp[n]=x;
}


void solved_by_RAFIQ(){
    int n,m,k;cin>>n;
    // memset(dp,-1,sizeof(dp));
    vin(v,n);
    for(int i=0;i<n;i++){
        mpp[v[i]+i].push_back(i);
        dp[v[i]+i]=-1;
        // if(v[i]+i>N)continue;
        // g[v[i]+i].push_back(i);
    }
    // st(v,0);
    int ans=dfs(n);
    cout<<ans<<endl;
    // for(int i=0;i<N;i++){
        // mp[v[i]+i]=n+i;
        mpp.clear();
    // }
}

signed main(){
    fastio
    int test_case=1,n=1;cin>>test_case;
    while (test_case--){
        solved_by_RAFIQ();
    }
}
